{
  "name": "enzyme-chai-a11y",
  "version": "0.0.7",
  "description": "Accessibility testing plugin for chai based on axe-core",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/interviewstreet/enzyme-chai-a11y"
  },
  "main": "lib/index.js",
  "author": {
    "name": "Vikas Parashar",
    "email": "svnitvikas@gmail.com",
    "url": "https://github.com/vikas-parashar"
  },
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "lint": "eslint .",
    "docs": "documentation readme src --section=API",
    "postdocs": "git add README.md",
    "clean": "rimraf lib",
    "prebuild": "npm run docs && npm run clean",
    "build": "babel src -d lib",
    "prerelease": "npm run lint && npm run build",
    "release": "standard-version",
    "postpublish": "git push origin master --follow-tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "enzyme-chai-a11y"
  ],
  "dependencies": {
    "axe-core": "3.4.0",
    "chalk": "3.0.0",
    "jest-matcher-utils": "24.9.0"
  },
  "devDependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.5",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-flow": "7.0.0",
    "babel-eslint": "10.0.2",
    "babel-jest": "24.8.0",
    "chai": "^4.2.0",
    "documentation": "11.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "6.0.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "5.0.0",
    "eslint-plugin-flowtype": "3.10.5",
    "eslint-plugin-flowtype-errors": "4.1.0",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-prettier": "3.1.0",
    "flow-bin": "0.101.1",
    "flow-copy-source": "2.0.6",
    "husky": "2.4.1",
    "jest": "24.8.0",
    "lint-staged": "8.2.1",
    "open-cli": "5.0.0",
    "prettier": "1.18.2",
    "rimraf": "2.6.3",
    "standard-version": "8.0.1"
  },
  "peerDependencies": {
    "chai": "^4.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2"
  }
}
